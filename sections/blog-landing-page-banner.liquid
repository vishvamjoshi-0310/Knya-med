<style>
  .blog-full-banner-wrapper .blog-banner-fullImage .blog-banner-imgWrapper img { width:100%;height:100%;}
.blog-banner-text-over-image {  position: absolute; left:50px; width: 90%;}
.blog-full-banner-wrapper { display: block;    margin-top: 0rem;    position: relative; }
.blog-full-banner-wrapper .container-fluid{ padding:0 !important;margin:0 !important;}
