h1.blog-banner-subtitle {color: #fff;font-weight: 400; color:#d3e167;   text-align: center;font-family: 'Heebo-Medium';font-size: 3.594vw;line-height: 100%; margin-bottom: 0;}
P.blog-banner-subtitle.tagged{color:#482f8f;}
  .blog-banner-fullImage{display: flex;align-items: center;justify-content: end;}

@media  (min-width:901px) and (max-width:1200px){
  
p.blog-banner-subtitle {font-size: 17px;line-height: 32px; margin-bottom: 0;}
}
 

@media only screen and (max-width:900px){
  .blog-full-banner-wrapper .mobileimage{display:block;}
  .blog-full-banner-wrapper .desktopimage{display:none;}
  .blog-banner-fullImage{display:block;}
  .blog-banner-text-over-image {display: block; padding-right: 0rem;left: 0px; width: 100%; top: 36%;}
  .blog-banner-textSubtitle {width: 100%;padding: 1rem 3rem;}
  h1.blog-banner-subtitle {font-size: 28px !important;  line-height:28px!important; margin-top: 0;text-align: center;}

}
  

