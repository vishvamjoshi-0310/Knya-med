{{ 'faq-accordion-stylesheet.css' | asset_url | stylesheet_tag }}
<script src="{{ 'faq-accordion-javascript.js' | asset_url }}" defer="defer"></script>

<div class="font-heebo-regular faq-container">
  {% if section.settings.heading %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
  {% for block in section.blocks %}
    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <span>{{ block.settings.question }}</span>
        <span class="icon icon-plus">{% render 'icon-plus-svg' %}</span>
        <span class="icon icon-minus">{% render 'icon-minus-svg' %}</span>
      </div>
      <div class="faq-answer">
        <p>{{ block.settings.answer }}</p>
      </div>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "FAQ Accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "FAQs"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Accordion",
    }
  ]
}
{% endschema %}