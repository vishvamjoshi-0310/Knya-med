<style>

    /* Note: If you make any changes to layout/design of this "main-register.liquid" section, 
  please implement the same in "main-login.liquid" section. As both have same layout now due to client requirement. */
  
  .login-container{
    max-width: 1200px;
    margin: auto;
    display: flex;
    gap: 16.66%;
    margin-top: 30px;

  }

  .login-section,
  .register-section{
    max-width: 400px;
    width: 33.34%;
  }
  
  .login-section{
    margin-left: 8.33%;  
  }

  .register-section{
    margin-right: 8.33%;
  }

  .sl-wrapper a.social_login.facebook,
  .sl-wrapper a.social_login.google{
      border-radius: 6px;
  }
  
  @media screen and (max-width: 768px) {
    .login-container{
      max-width: 768px;
      flex-wrap: wrap;
      width: 100%;
    }

    .login-section, .register-section {
      max-width: 768px;
      width: 100%;
      margin: 0 5%;
    }

  }
  
</style>

<section > 
  <div class="login-container">
    <div class="login-section">
      {% render 'login' %}
    </div>
    <div class="register-section">
      {% render 'register' %}      
    </div> 
  </div>
</section>




