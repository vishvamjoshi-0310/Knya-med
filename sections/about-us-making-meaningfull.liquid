    {
      "type": "checkbox",
      "id": "making_meanigfull_main_Desktop",
      "label": "Padding for Section",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "making_meanigfull_main_mob",
      "label": "Padding for Section in Mobile",
      "default": true
    },
    {
      "type": "text",
      "id": "making_meanigfull_Heading",
      "label": " Heading",
