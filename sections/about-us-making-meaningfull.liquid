    },
    {
      "type": "text",
      "id": "making_meanigfull_subHeading",
      "label": " Heading",
      "default": " Type Sub Heading Here"
    }
  ],
  "blocks": [
    {
      "type": "pointers",
      "name": "pointers ",
      "settings": [
        {
          "type": "text",
          "id": "pointers",
          "label": " Pointers",
          "default": " Pointers"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "right Image",
          "info": "Recommended Image Size : 800X734px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": " Making Meanigfull section"
    }
  ]
}
