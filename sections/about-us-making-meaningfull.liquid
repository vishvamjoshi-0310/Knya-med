{% schema %}
{
  "name": "Making Meanigfull",
  "settings": [
    {
      "type": "range",
      "id": "margintop_making_meaningfull",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin from top for Entire Section",
      "default": 0
