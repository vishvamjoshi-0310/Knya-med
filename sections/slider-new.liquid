       .main-collection-home .plus-swatch.show-plus-mobile {display: block;}
       .main-collection-home .HorizontalList :is(.desktopcolorhide,.mobilecolorhide){display: none;}
  }
 .first-line-home {color: #282828;    letter-spacing: 0.64px;
    margin-bottom: 1.8%;}

