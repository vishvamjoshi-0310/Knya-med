   @media screen and (max-width: 640px){
    #shopify-section-{{ section.id }} .coll-home{
      margin-top:{{ section.settings.marginTopsliddmob }}px;
      margin-bottom:{{ section.settings.marginBottomsliddmob }}px;
    }
