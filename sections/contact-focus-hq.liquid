  "id": "margintopcontact",
  "min": 0,
  "max": 100,
  "step": 1,
  "unit": "px",
  "label": "margin from top for entire section",
  "default": 0
},
    {
  "type": "range",
  "id": "margintopcontactmob",
  "min": 0,
  "max": 100,
  "step": 1,
  "unit": "px",
  "label": "margin from top for entire section",
  "default": 0
},
      {
  "type": "text",
  "id": "main-heading",
  "label": "main headinng"
},
     {
  "type": "text",
  "id": "adress-text",
  "label": "adress"
} ,
     {
  "type": "text",
  "id": "mail-text",
  "label": "mail"
} ,
     {
  "type": "text",
  "id": "mail-focus",
  "label": "mail id"
} 
      ,
     {
  "type": "text",
  "id": "call-text",
  "label": "number"
}    
      ,
     {
  "type": "text",
  "id": "call-focus",
  "label": "enter fon number"
}    ,
     {
  "type": "text",
  "id": "time-text",
  "label": "Timing"
} ,{
  "type": "image_picker",
  "id": "background-img",
  "label": "background image for social media"
