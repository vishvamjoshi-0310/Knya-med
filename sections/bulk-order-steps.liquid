<link
  rel="stylesheet"
  href="{{ 'bulk-order-steps-stylesheet.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

<section class="bulk-order-steps">
  <div class="bulk-order-container">
    <h2 class="bulk-order-heading">{{ section.settings.heading }}</h2>
    <p class="bulk-order-subheading">{{ section.settings.subheading }}</p>

    <div class="steps-wrapper">
      <div class="bulk-order-border"></div>
      {% for block in section.blocks %}
        <div class="step">
          <div class="step-number {% if forloop.first %}active{% endif %}">
            <span>{{ forloop.index | prepend: '0' }}</span>
          </div>
          <div class="step-text">{{ block.settings.title }}</div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="order-button">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

<script src="{{ 'bulk-order-steps-javascript.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Bulk Order Steps",
  "class": "bulk-order-steps-parent",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Bulk Ordering Made Simple"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Fill out the form, and we'll take care of the rest."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Order Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Fill out the form with details"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Bulk Order Steps",
      "category": "Custom"
    }
  ]
}
{% endschema %}
