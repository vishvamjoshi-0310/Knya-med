<link
  rel="stylesheet"
  href="{{ 'count-ticker-section-stylesheet.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

<div class="count-ticker-section">
  <div class="count-ticker-text-container">
    <h2 class="count-ticker-heading">{{ section.settings.heading }}</h2>
    <p class="count-ticker-subheading">{{ section.settings.subheading }}</p>
  </div>
  <div class="count-ticker-block-container">
    {% for block in section.blocks %}
      <div class="count-ticker-block">
        <span class="count-ticker-block-heading">{{ block.settings['block-heading'] }}</span>
        <div class="count-ticker-block-content">
          <div class="count-ticker {% if block.settings['enable-ticker'] %}enable-ticker{% endif %}">
            {% if block.settings['enable-ticker'] %}
              {% assign ticker_id = 'ticker-' | append: block.id %}
              <p class="count-ticker-content">
                <span id="{{ ticker_id }}" data-count="{{ block.settings['ticker-content'] }}">00</span><span>+</span>
              </p>
            {% else %}
              <p class="count-ticker-content">{{ block.settings['ticker-content'] }}+</p>
            {% endif %}
          </div>
          <p class="count-ticker-block-subheading">{{ block.settings['block-subheading'] }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<script src="{{ 'count-ticker-section-javascript.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "count-ticker-section",
  "class": "count-ticker-section-parent",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "name": "Count Ticker",
      "type": "count-ticker",
      "settings": [
        {
          "type": "text",
          "id": "block-heading",
          "label": "Block Heading"
        },
        {
          "type": "text",
          "id": "ticker-content",
          "label": "Ticker Content"
        },
        {
          "type": "checkbox",
          "id": "enable-ticker",
          "label": "Enable Ticker"
        },
        {
          "type": "text",
          "id": "block-subheading",
          "label": "Block Subheading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Count Ticker Section"
    }
  ]
}
{% endschema %}
