<link
  rel="stylesheet"
  href="{{ 'vitals-featured-content-stylesheet.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

<div class="vitals-featured-content">
  <h3>{{ section.settings['vitals-content-section-heading'] }}</h3>
  <div class="vitals-featured-content-inner">
    {% for block in section.blocks %}
      <div class="vitals-featured-content-card">
        <div class="vitals-featured-content-card-inner">
          {% comment %}
            <div class="vitals-featured-content-card-image">
              {{
                block.settings['content-main-image']
                | image_url: width: 400
                | image_tag: class: '', loading: 'lazy', height: 'auto', fetchpriority: 'low'
              }}
              <div class="vitals-featured-content-card-logo">
                {{
                  block.settings['content-floating-logo']
                  | image_url: width: 80
                  | image_tag: class: '', loading: 'lazy', height: 'auto', fetchpriority: 'low'
                }}
              </div>
            </div>
          {% endcomment %}
          <div class="vitals-featured-content-card-content">
            <div class="vitals-featured-content-card-heading">
              {{
                block.settings['content-floating-logo']
                | image_url: width: 350
                | image_tag: class: '', loading: 'lazy', height: 'auto', fetchpriority: 'low'
              }}
            </div>
            <div class="vitals-featured-content-card-sub-heading">
              <p>{{ block.settings['vitals-content-sub-heading'] }}</p>
            </div>
            <div class="vitals-featured-content-card-button" data-url="{{ block.settings['vitals-content-url'] }}">
              <p>
                <span>Read More</span>
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3.90662 9.75004H12.2841L8.62412 13.41C8.33162 13.7025 8.33162 14.1825 8.62412 14.475C8.91662 14.7675 9.38912 14.7675 9.68162 14.475L14.6241 9.53254C14.9166 9.24004 14.9166 8.76754 14.6241 8.47504L9.68912 3.52504C9.39662 3.23254 8.92412 3.23254 8.63162 3.52504C8.33912 3.81754 8.33912 4.29004 8.63162 4.58254L12.2841 8.25004H3.90662C3.49412 8.25004 3.15662 8.58754 3.15662 9.00004C3.15662 9.41254 3.49412 9.75004 3.90662 9.75004Z" fill="black"/>
                </svg>
              </p>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="featured-navigation-container">
    <div class="featured-navigation-dot-container">
      {% for block in section.blocks %}
        <span class="featured-navigation-dot" data-tab="feature-{{ forloop.index }}">
          {{- block.settings.feature_name -}}
        </span>
      {% endfor %}
    </div>
    <div class="featured-navigation-button-container">
      <div class="featured-navigation-button prev">
        {% render 'stetho-feature-prev-icon' %}
      </div>
      <div class="featured-navigation-button next">
        {% render 'stetho-feature-next-icon' %}
      </div>
    </div>
  </div>
</div>

<script src="{{ 'vitals-featured-content-javascript.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "vitals-featured-content",
  "class": "vitals-featured-content-parent",
  "settings": [
    {
      "type": "text",
      "id": "vitals-content-section-heading",
      "label": "Vitals Content Section Heading"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content",
      "settings": [
        {
          "type": "image_picker",
          "id": "content-main-image",
          "label": "Content Main Image"
        },
        {
          "type": "image_picker",
          "id": "content-floating-logo",
          "label": "Content Floating Logo"
        },
        {
          "type": "text",
          "id": "vitals-content-heading",
          "label": "Vitals Content Heading"
        },
        {
          "type": "text",
          "id": "vitals-content-sub-heading",
          "label": "Vitals Content Sub Heading"
        },
        {
          "type": "url",
          "id": "vitals-content-url",
          "label": "Vitals Content URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vitals Featured Content"
    }
  ]
}
{% endschema %}
