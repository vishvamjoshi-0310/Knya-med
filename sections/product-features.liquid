<script>
  document.querySelectorAll('.shop-link').forEach(link => {
    link.addEventListener('click', function (e) {
      e.preventDefault();

      const span = this.querySelector('span');
      const svgPath = this.querySelector('svg path');
      const targetUrl = this.getAttribute('href');

      // Add clicked class on span (removes border)
      span.style.borderColor = '#ffffff';

      // Change colors to black
      this.style.color = '#616161';
      svgPath.setAttribute('fill', '#616161');

      // Wait 500ms then navigate
      setTimeout(() => {
        window.location.href = targetUrl;
      }, 500);
    });
  });
</script>


