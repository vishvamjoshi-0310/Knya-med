<style>
  .login-section {
    position: relative;
  }
  /* Note: If you make any changes to layout of this "main-login.liquid" section, 
  please implement the same in "main-register.liquid" section. As both have same layout now due to client requirement. */

  .login-container {
    max-width: 960px;
    margin: 160px auto;
    display: flex;
    gap: 16.66%;
  }
  .register-section {
    margin-right: 8.33%;
  }

  .sl-wrapper a.social_login.facebook,
  .sl-wrapper a.social_login.google {
    border-radius: 6px;
  }

  @media screen and (max-width: 768px) {
    .login-container {
      max-width: 768px;
      margin: 64px auto;
      flex-wrap: wrap;
      width: 100%;
    }

    .login-section,
    .register-section {
      max-width: 768px;
      width: 100%;
      margin: 0 5%;
    }
  }
  {% if template.name == "login" %}
    sticky-header, .top-mail, footer, .section-header{
      display: none;
    }
  {% endif %}
</style>

<a href="/" class="login-back-button">
  <svg width="11" height="18" viewBox="0 0 11 18" fill="none" xmlns="http://www.w3.org/2000/svg">
    <path opacity="0.72" d="M9.70711 17.2929C9.31658 17.6834 8.68342 17.6834 8.29289 17.2929L0.707106 9.70711C0.316582 9.31658 0.316583 8.68342 0.707107 8.29289L8.29289 0.707106C8.68342 0.316582 9.31658 0.316582 9.70711 0.707107L10.3929 1.39289C10.7834 1.78342 10.7834 2.41658 10.3929 2.80711L4.55355 8.64645C4.35829 8.84171 4.35829 9.15829 4.55355 9.35355L10.3929 15.1929C10.7834 15.5834 10.7834 16.2166 10.3929 16.6071L9.70711 17.2929Z" fill="black"/>
  </svg>
</a>
<section>
  <div class="login-container">
    <div class="login-section" style="width: 100%;">
      {% render 'login' %}
    </div>
    {% comment %}
      <div class="register-section">
        {% render 'register' %}
      </div>
    {% endcomment %}
  </div>
</section>

