{{ 'section-banner-with-text.css' | asset_url | stylesheet_tag }}
{%- style -%}
#Banner-{{ section.id }}{ margin-top:{{section.settings.margin-top-desktop}}px; margin-bottom:{{section.settings.margin-bottom-desktop}}px; }
#Banner-{{ section.id }} .text-and-bg-color{background:{{section.settings.text-backgroundcolor}}; background-attachment: fixed;}    
#Banner-{{ section.id }} .banner__heading, #Banner-{{ section.id }} .banner__heading span, #Banner-{{ section.id }} .banner__text span, #Banner-{{ section.id }} .banner__subtitle span{ color:{{section.settings.text-color}} ; }
#Banner-{{ section.id }} .banner__box{padding:{{section.settings.box-padding}}rem;}
  
  #Banner-{{ section.id }}::after {
    opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }
#Banner-{{ section.id }} .content_padding{padding: 0 var(--desktop-padding);}
#Banner-{{ section.id }} .clikablefor_cursor{cursor:pointer;}

#Banner-{{ section.id }} .swiper:not(.swiper-initialized) .swiper-slide{display:none;}
#Banner-{{ section.id }} .swiper:not(.swiper-initialized) .swiper-slide:first-child{display:block;}  
.imageWithTextBanner .banner__media-desktop img, .imageWithTextBanner .banner__media-mobile img{width:100%;height:auto;} 
.imageWithTextBanner .swiper-slide a{line-height:100%;}
@media screen and (max-width: 749px) {
   #Banner-{{ section.id }}{ margin-top:{{section.settings.margin-top-mobile}}px; margin-bottom:{{section.settings.margin-bottom-mobile}}px; } 
   #Banner-{{ section.id }} .content_padding{padding: 0 var(--mobile-padding);}
 }
{%- endstyle -%}
<div id="Banner-{{ section.id }}" class="imageWithTextBanner banner--content-align-{{ section.settings.desktop_content_alignment }} banner--content-align-mobile-{{ section.settings.mobile_content_alignment }} banner--{{ section.settings.image_height }}{% if section.settings.stack_images_on_mobile and section.settings.image != blank and section.settings.image_2 != blank %} banner--stacked{% endif %}{% if section.settings.adapt_height_first_image and section.settings.image != blank %} banner--adapt{% endif %}{% if section.settings.show_text_below %} banner--mobile-bottom{%- endif -%}{% if section.settings.show_text_box == false %} banner--desktop-transparent{% endif %} ">
 <div class="swiper slider_containnerImgtext banner_with_text_{{ section.id }}">
   <div class="swiper-wrapper">
       {%- for block in section.blocks -%}
         
      <div class="swiper-slide">
  
  {%- if block.settings.image != blank -%}
    <div class="media banner__media-desktop" dataAttr="{{ block.settings.hpbox1 }}">
      {%-liquid
        assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
        if block.settings.image_2 != blank
          assign image_class = "banner__media-image-half"
        endif
        if block.settings.image_2 != blank and block.settings.stack_images_on_mobile
          assign sizes = "(min-width: 750px) 50vw, 100vw"
        elsif block.settings.image_2 != blank
          assign sizes = "100vw"
        else
          assign sizes = "100vw"
        endif

       if forloop.index0 == 0 
        assign lazy = 'eager' 
       assign fetch_priority = 'high' 
      assign preload = true 
       assign decoding = 'sync' 
      else 
     assign lazy = 'lazy'
      assign fetch_priority = 'auto' 
      assign preload = false 
      assign decoding = 'async'                   
       endif 
      -%}
      <a {% if block.settings.button_link_banner != blank  %} href="{{ block.settings.button_link_banner }}" {% endif %} >
        {%  assign mob_desk = block.settings.image_2.alt | default: 'desktop-banner-image-' | append: forloop.index %}
        
      {{ block.settings.image | image_url: width: 1500 , format: 'webp' | image_tag:
        loading: lazy,
        fetchpriority: fetch_priority, 
        preload: preload, 
        decoding: decoding,
        width: block.settings.image.width,
        height: image_height,
        class: image_class,
        sizes: sizes,
        widths: '375, 550, 750, 1100, 1500, 1780, 2000',
        alt: mob_desk
      }}
      </a>
    </div>
   
  {%- endif -%}
  {%- if block.settings.image_2 != blank -%}
    <div class="media banner__media-mobile" dataAttr="{{ block.settings.hpbox1 }}">
      {%-liquid
        assign image_height_2 = block.settings.image_2.width | divided_by: block.settings.image_2.aspect_ratio
        if block.settings.image != blank
          assign image_class_2 = "banner__media-image-half"
        endif
        if block.settings.image != blank and block.settings.stack_images_on_mobile
          assign sizes = "(min-width: 750px) 50vw, 100vw"
        elsif block.settings.image != blank
          assign sizes = "100vw"
        else
          assign sizes = "100vw"
        endif
         
          if forloop.index0 == 0 
        assign lazy = 'eager' 
       assign fetch_priority = 'high' 
      assign preload = true 
       assign decoding = 'sync' 
      else 
     assign lazy = 'lazy'
      assign fetch_priority = 'auto' 
      assign preload = false 
      assign decoding = 'async'                   
       endif 
      -%}
      <a {% if block.settings.button_link_banner != blank  %} href="{{ block.settings.button_link_banner }}" {% endif %} >
        {%  assign mob_alt = block.settings.image_2.alt | default: 'mobile-banner-image-' | append: forloop.index %}
     
        {{ block.settings.image_2 | image_url: width: 600 , format: 'webp' | image_tag:
              loading: lazy,
              fetchpriority: fetch_priority, 
              preload: preload, 
              decoding: decoding,
              width: block.settings.image_2.width,
              height: image_height_2,
              class: image_class_2,
              sizes: sizes,
              widths: '375, 550, 750',
              alt: mob_alt
            }}
        
      </a>
    </div>
  {%- endif -%}

{% if block.settings.subheading != blank or block.settings.heading != blank or block.settings.text != blank or block.settings.button_label_1 != blank or block.settings.button_label_2 != blank %}
  {%- if block.settings.button_link_banner != blank -%}
                <a href="{{ block.settings.button_link_banner }}">
              {%- endif -%}
  <div class="banner__content banner__content--{{ section.settings.desktop_content_position }}  {% if block.settings.button_link_banner != blank %} clikablefor_cursor {% endif %}" dataAttr="{{ block.settings.hpbox1 }}" > 
    <div class="banner__box content-container content-container--full-width-mobile text-and-bg-color content_padding">
       
            <div class="banner__subtitle"><span style="color:{{ block.settings.subheading_color }}">{{ block.settings.subheading | escape }}</span></div>
            <h2 class="banner__heading" style="color:{{ block.settings.heading_color }}">
              {{ block.settings.heading }}
            </h2>
       
            <div class="banner__text {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              <span style="color:{{ block.settings.text_color }}">{{ block.settings.text | escape }}</span>
            </div>
       
            <div class="banner__buttons" {{ block.shopify_attributes }}>
              {%- if block.settings.button_label_1 != blank and block.settings.button_link_1 != blank -%}
                <a{% if block.settings.button_link_1 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_1 }}"{% endif %} class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}" style="background:{{ block.settings.button-backgroundcolor }}; color:{{ block.settings.button-color }};">{{ block.settings.button_label_1 | escape }}</a>
              {%- endif -%}
              {%- if block.settings.button_label_2 != blank and block.settings.button_link_2 != blank -%}
                <a{% if block.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_2 }}"{% endif %} class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}" style="background:{{ block.settings.button-backgroundcolor }}; color:{{ block.settings.button-color }};">{{ block.settings.button_label_2 | escape }}</a>
              {%- endif -%}
            </div>
    </div>
    </div>{%- if block.settings.button_link_banner != blank -%}
                </a>
      {% endif %}
       {% endif %} 
      </div>

 {%- endfor -%}

    </div>
  
  </div>
  
</div>
<script>
  window.addEventListener(
    'DOMContentLoaded',
    () => {     
      var bannerWithText = new Swiper('.banner_with_text_{{ section.id }}', {
        slidesPerView: 1,
        spaceBetween: 0,
        {% if section.settings.checkforautoslide %} 
            loop: true,
        {% endif %}
        loopFillGroupWithBlank: true,
        pagination: {
          el: '.swiper-pagination',
          clickable: true,
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev',
        },
      });
       {% if section.settings.checkforautoslide %} 
              function startAutoplay() {
                      if (bannerWithText) {
                          bannerWithText.autoplay.start();
                      }
                  }
                document.addEventListener('mousemove', startAutoplay);
               document.addEventListener('touchstart', startAutoplay);
        {% endif %}
    },
    {once: true}
  );

</script> 
