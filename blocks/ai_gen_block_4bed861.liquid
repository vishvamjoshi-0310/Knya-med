{% doc %}
  @prompt
    Disclaimer
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-disclaimer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-disclaimer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: flex-start;
    gap: 16px;
  }

  .ai-disclaimer-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-disclaimer-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-disclaimer-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-disclaimer-heading-{{ ai_gen_id }} {
    margin: 0 0 8px;
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    line-height: 1.3;
  }

  .ai-disclaimer-text-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
  }

  .ai-disclaimer-text-{{ ai_gen_id }} p {
    margin: 0 0 8px;
  }

  .ai-disclaimer-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-disclaimer-text-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: underline;
  }

  .ai-disclaimer-text-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-disclaimer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
      width: {{ block.settings.desktop_width_percent }}%;
    }

    .ai-disclaimer-container-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-disclaimer-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-disclaimer-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-disclaimer-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .ai-disclaimer-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }
{% endstyle %}

<div class="ai-disclaimer-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-disclaimer-container-{{ ai_gen_id }}">
    {% if block.settings.show_icon %}
      <div class="ai-disclaimer-icon-{{ ai_gen_id }}">
        {% if block.settings.icon_style == 'info' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="16" x2="12" y2="12"></line>
            <line x1="12" y1="8" x2="12.01" y2="8"></line>
          </svg>
        {% elsif block.settings.icon_style == 'alert' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
            <line x1="12" y1="9" x2="12" y2="13"></line>
            <line x1="12" y1="17" x2="12.01" y2="17"></line>
          </svg>
        {% elsif block.settings.icon_style == 'check' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
          </svg>
        {% elsif block.settings.icon_style == 'shield' %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-disclaimer-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h3 class="ai-disclaimer-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-disclaimer-text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

