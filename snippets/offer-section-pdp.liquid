   <script>    
    function copyCouponCode(element){
            const textToCopy = element.getAttribute("data-couponcode");
            navigator.clipboard.writeText(textToCopy)
            .then(() => {             
              const message = element.parentElement.querySelector("span[copycodemessage]");
                    message.innerText = "Copied";
               setTimeout(function(){
                  message.innerText = "";
               },1500)
            })
            .catch(err => {
            console.error('Failed to copy: ', err);
            });
    }
