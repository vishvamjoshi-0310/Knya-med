      document.querySelector('.custom-facet-filter-icon path').style.fill = 'white';
    } else {
      document.querySelector('.custom-facet-filter-icon path').style.fill = '#D4E167';
    }

    if (document.querySelector('#labelname').classList.contains('activelable')) {
      document.querySelector('.sortingg').click();
    }
  });

