  });

  // Tab Filter style
  function showcase(evt, index) {
    var i, filter_content_div, tablinks;
    filter_content_div = document.getElementsByClassName('filter_content_div');
    for (i = 0; i < filter_content_div.length; i++) {
      filter_content_div[i].style.display = 'none';
    }
    tablinks = document.getElementsByClassName('tablinks');
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(' active_filter_tab', '');
    }
    document.getElementById('filterContent_' + index + '').style.display = 'block';
    evt.currentTarget.className += ' active_filter_tab';
  }

