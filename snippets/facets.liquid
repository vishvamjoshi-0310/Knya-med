  window.dispatchDisabledInput = function(){
    let disabledInput = document.querySelectorAll('.list-unstyled[category-label] input[type="checkbox"]');
    disabledInput?.forEach(input=>{
      let matchedInput = document.querySelector(`.filter_content_div[category-label] input[filter-label="${input.getAttribute('filter-label')}"][filter-value="${input.getAttribute('filter-value')}"]`);
      if(input.disabled){
        matchedInput.disabled = true;
        matchedInput.closest('.mobile-facets__label')?.classList.add('mobile-facets__label--disabled')
      }else{
        matchedInput.disabled = false;
        matchedInput.closest('.mobile-facets__label')?.classList.remove('mobile-facets__label--disabled')
      }
    })
  }
  document.querySelector('.sort-right').addEventListener('click', function () {
