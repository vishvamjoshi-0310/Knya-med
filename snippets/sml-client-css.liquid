    height: unset;
    margin-top: 10px;
    margin: auto;
    text-align: center;
}

/* ===== EMAIL OTP BUTTONS ===== */
#smlEmailOTPDivGetOTPButton {
    width: 100%;
    margin-top: 15px;
    margin-bottom: 15px;
    transition: .4s ease;
}

#smlEmailOTPDivGetOTPButton:hover {
    box-shadow: none;
}

#smlEmailOTPDivSubmitOTPButton {
    position: relative;
    margin-top: 20px;
    width: 100%;
}

/* ===== FORM INPUTS ===== */
#userEmailInput {
    display: none;
    border-radius: 6px;
    padding: 15px;
    border: 1px solid #0000001F;
    box-shadow: 0px 1px 2px 0px #E4E5E73D;
    width: 100%;
}

input#userEmailInput:focus {
    box-shadow: none;
    outline: none;
    font-size: 16px;
}

#smlEmailOTPDivUserEmailInput {
    border: none;
    border-radius: 4px;
    margin-top: 10px;
    padding: 10px;
    background: #f2f2f2;
    width: 100%;
    border-bottom: 1px solid #d6d6d6;
}

input#smlEmailOTPDivUserEmailInput:focus {
    box-shadow: none;
    outline: none;
    font-size: 16px;
}

.login-back-button {
    position: absolute;
    top: 10%;
    left: 5%;
    border: 1px solid #00000014;
    backdrop-filter: blur(80px);
    width: max-content;
    border-radius: 8px;
    width: 36px;
    height: 36px;
    display: flex;
    justify-content: center;
    align-items: center;
}

#userFirstNameInput {
    display: none;
    border-radius: 6px;
    padding: 10px;
    width: 100%;
    border: 1px solid #0000001F;
    box-shadow: 0px 1px 2px 0px #E4E5E73D;
}

#userLastNameInput,
#newUserEmailInput {
    display: none;
    border-radius: 6px;
    padding: 10px;
    width: 100%;
    border: 1px solid #0000001F;
    box-shadow: 0px 1px 2px 0px #E4E5E73D;
}

.input-field-container {
    display: none;
    margin-top: 16px;
}

.input-field-container label {
    display: block;
    font-family: 'Heebo-Medium';
    font-size: 14px;
    font-weight: 500;
    line-height: 24px;
    color: #2C2C2C;
    margin-bottom: 8px;
    text-transform: uppercase;
}

#userPasswordInput {
    display: none;
    border: none;
    border-radius: 4px;
    margin-top: 10px;
    padding: 10px;
    background: #f2f2f2;
    width: 100%;
    border-bottom: 1px solid #d6d6d6;
}

/* ===== ACTION BUTTONS ===== */
#registerUserButton {
    border-radius: 8px;
    display: none;
    width: 100%;
    background: #462D8C;
    border: none;
    box-shadow: none;
    padding: 10px 0;
    color: #fff;
    font-family: 'Heebo-Regular';
    font-size: 14px;
    margin-top: 16px;
}

#backToLoginButton {
    display: none;
    margin: 0 5px;
    background: none;
    border: none;
    box-shadow: none;
    padding: 0;
    min-width: unset;
}

button#backToLoginButton svg {
    width: 12px;
    height: 12px;
}

#backToLoginButtonEmailOtp {
    display: none;
    margin: 0;
    background: none;
    border: none;
    box-shadow: none;
    color: #121212;
    padding: 5px 10px;
    min-width: unset;
    margin-left: 5px;
    min-height: unset;
    width: unset;
}

button#backToLoginButtonOtp svg {
    width: 18px;
    height: 18px;
}

button#loginWithEmailOTPButton,
button#loginWithEmailButton,
button#loginWithBiometricButton,
button#loginWithPhoneNumberButton,
button#loginWithGoogleButton {
    border-radius: 6px;
    background-color: #fff;
    color: #121212;
    border: 1px solid #c9c9c9;
    outline: none;
    box-shadow: none;
    padding: 10px 20px;
    margin-top: 20px;
    min-width: unset;
    min-height: unset;
    display: none;
    margin: 20px auto;
}

/* ===== FOOTER LINKS ===== */
.login-urls {
    display: flex;
    justify-content: center;
    gap: 24px;
    font-size: 11px;
    font-weight: 400;
    margin-top: 16px;
}

.login-urls a {
    color: #86868B;
}

/* ===== ERROR & SUCCESS MESSAGES ===== */
#smlEmailOTPDivError,
#loginError {
    text-align: center;
    color: red;
    width: 100%;
}

#smlEmailOTPDivSuccess,
#loginSuccess {
    text-align: center;
}

/* ===== ICONS & DECORATIVE ELEMENTS ===== */
.call-icon {
    margin-left: -30px;
    margin-top: 15px;
    color: #121212;
}

.fas.fa-long-arrow-alt-right {
    margin-left: 10px;
    font-size: 16px;
}

.selectbox-wrapper .fa-chevron-down {
    font-size: 16px;
    color: #000;
}

/* ===== DIVIDERS ===== */
.continue_text {
    display: none;
    text-align: center;
    margin-bottom: 15px;
    margin-top: 15px;
}

.continue_text::after {
    content: "";
    display: block;
    max-width: 100px;
    margin-left: 30px;
    margin-top: -15px;
    height: 2px;
    background-color: #d7d7d7;
}

.continue_text::before {
    content: "";
    display: block;
    max-width: 100px;
    margin-bottom: -15px;
    margin-left: auto;
    margin-right: 30px;
    height: 2px;
    background-color: #d7d7d7;
}

/* ===== OTHER LOGIN METHODS ===== */
#otherLoginMethodsDiv {
    display: none;
    text-align: center;
}

/* ===== SOCIAL LOGIN ===== */
.socialLogin_buttons {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 4px;
    margin-bottom: 4px;
}

.socialLogin_buttons div {
    color: #FFF;
    width: calc(100% - 0px);
    cursor: pointer;
    height: 36px;
    margin: 4px auto 4px auto;
    display: flex;
    overflow: hidden;
    align-items: center;
    border-color: #888888;
    border-style: solid;
    border-width: 1px;
    border-radius: 5px;
    justify-content: center;
}

.h_google_text {
    color: #000000;
}

.h_facebook_text {
    color: #000000;
}

.h_googleFB_logo {
    width: 28px;
    background: white;
    border-radius: 50%;
    margin-right: 13px;
}

/* ===== TERMS & CONDITIONS ===== */
#smlTermsAndConditionsDiv {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin: 10px;
    display: none;
}

#smlAcceptMarketingDiv {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    margin: 10px 0;
    display: none !important;
    gap: 5px;
}

#smlAcceptMarketingCheckbox {
    margin: 0;
    width: 14px;
}

#smlAcceptMarketingText {
    font-size: 10px;
    font-family: 'Heebo-Regular';
}

#mobileOTPLoginSection input[type="checkbox"] {
    accent-color: #462D8C;
}

/* ===== LOADING ANIMATIONS ===== */
.otp-btn-loading {
    position: relative;
}

.otp-btn-loading::after {
    content: "" !important;
    display: block;
    width: 20px !important;
    height: 20px !important;
    margin: auto;
    border: 3px solid transparent;
    border-top-color: #fff;
    border-radius: 50% !important;
    animation: button-loading-spinner 1s ease infinite;
    background-color: transparent !important;
    opacity: 100% !important;
    position: static !important;
}

.otp-btn-loading.black-spinner::after {
    border-top-color: #000;
}

@keyframes button-loading-spinner {
    from {
        transform: rotate(0turn);
    }
    to {
        transform: rotate(1turn);
    }
}

/* ===== SPINNER ===== */
#sml-spinner-img {
    max-width: 100%;
}

