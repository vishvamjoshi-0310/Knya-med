/* ===== GENERAL LAYOUT ===== */
.template-login main {
    background: linear-gradient(239deg, #dbdbdc, #f5f5f7);
    position: relative;
}

#whole-login-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 26px;
    align-items: stretch;
    background: white;
    border-radius: 20px;
    padding: 12px;
}

.new-login-content-container {
    margin-bottom: 16px;
}

#new-login-heading,
#new-login-second-heading {
    font-family: 'Heebo-Medium';
    font-weight: 500;
    font-size: 20px;
    line-height: 28px;
    text-align: center;
    vertical-align: middle;
    color: #211A1E;
}

#new-login-sub-heading {
    font-family: 'Heebo-Regular';
    font-weight: 400;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
    vertical-align: middle;
    margin: 0;
    color: #0000008F;
}

.new-login-box {
    width: 100%;
    padding-bottom: 16px;
}

.customer.login {
    box-shadow: 0px 0px 10px #00000030;
    border-radius: 10px;
    padding: 20px 30px !important;
}

/* ===== BRANDING & LOGO ===== */
.login-page-brand-logo-desktop {
    justify-content: flex-start;
    align-items: center;
}

.login-page-brand-logo-mobile {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 50px;
}

/* ===== HEADINGS ===== */
#simplify-login-sign-up-text {
    text-align: center;
    font-size: 32px;
}

#mobileOTPLoginSection h2 {
    font-weight: 500;
    font-size: 24px;
    line-height: 32px;
    color: #000000B2;
    font-family: 'Heebo-Medium';
}

#mobileOTPLoginSection span {
    font-weight: 400;
    font-size: 11px;
    line-height: 16px;
    color: #86868B;
    font-family: 'Heebo-Regular';
    margin: 0;
}

/* ===== PHONE INPUT SECTION ===== */
.selectbox-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    border-radius: 6px;
    overflow: hidden;
    gap: 8px;
}

.selectbox-wrapper label {
    font-family: 'Heebo-Medium';
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    letter-spacing: 0.2px;
    color: #2C2C2C;
}

.selectbox-wrapper select {
    max-height: 90vh;
    overflow-y: auto;
}

#parody-country-code{
    font-family: "Heebo-Regular";
    background: #FAFAFA;
    width: min-content;
    padding: 7.5px 12px;
    border-radius: 6px;
    margin-bottom: 0px;
    margin-top: unset;
    font-size: 16px;
    line-height: 24px;
    border: 1px solid #D2D2D7;
    color: #000000B8;
}

.selectbox-wrapper #mobileCountryCodeDropdown {
    display: none !important;
    padding: 8px;
    text-align: center;
    text-align-last: center;
    margin-top: unset;
    flex: unset;
    width: 48px;
    height: 40px;
    color: #000000B8;
    box-shadow: none;
    outline: none;
    border: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    position: relative;
    margin-bottom: 0px;
    border: 1px solid var(--color-grey-83, #D2D2D7);
    background: transparent;
    font-size: 16px;
    line-height: 20px;
    border-radius: 6px;
}

.selectbox-wrapper-fields {
    display: flex;
    align-items: center;
    border-radius: 6px;
    overflow: hidden;
    gap: 8px;
    width: 100%;
}

.selectbox-wrapper #smlPhoneNumberInput {
    background: #FAFAFA;
    width: 82%;
    padding: 7.5px 12px;
    border-radius: 6px;
    margin-bottom: 0px;
    margin-top: unset;
    font-size: 16px;
    border: 1px solid #D2D2D7;
}

.selectbox-wrapper #smlPhoneNumberInput:focus {
    outline: none;
    box-shadow: none;
}

@media(max-width: 768px){
    .selectbox-wrapper #mobileCountryCodeDropdown{
        height: 36px;
        font-size: 14px;
    }
    .selectbox-wrapper #smlPhoneNumberInput{
        padding: 5.3px 12px;
    }
    #parody-country-code{
        padding: 5.3px 12px;
    }
}

#smlPhoneNumberInput::-webkit-inner-spin-button,
#smlPhoneNumberInput::-webkit-outer-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

#smlPhoneNumberInput {
    -moz-appearance: textfield;
}

#mobileOTPLoginSection input::placeholder {
    color: #999999;
    font-family: 'Heebo-Regular';
    font-size: 16px;
    line-height: 1;
}

#mobileOTPLoginSection input {
    font-family: 'Heebo-Regular';
}

#phoneNumberDiv {
    display: none;
    border-bottom: 1px dashed #00000029;
    color: #616161;
}

#emailDiv {
    display: none;
}

div#phoneNumberAndEditDiv {
    color: #0000008F;
    font-family: 'Heebo-Regular';
    font-size: 13px;
    line-height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}

div#emailAndEditDiv {
    display: none;
    align-items: baseline;
    justify-content: center;
}

/* ===== OTP INPUT BOXES ===== */
.otp-container {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    margin: 20px auto;
}

.otp-container legend {
    font-family: 'Heebo-Medium';
    font-size: 12px;
    font-weight: 700;
    line-height: 16px;
    color: #616161;
    margin-bottom: 8px;
}

.otp-input-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    width: 100%;
}

.otp-box {
    width: 80px;
    height: 40px;
    border: 1px solid #D2D2D7;
    border-radius: 6px;
    text-align: center;
    font-size: 24px;
    font-weight: 600;
    background: #f9f9f9;
    transition: all 0.3s ease;
}

.otp-box:focus {
    border-color: #462D8C;
    outline: none;
    box-shadow: 0 0 0 3px rgba(70, 45, 140, 0.1);
    background: #fff;
}

.otp-box.filled {
    border-color: #462D8C;
    background: #fff;
}

