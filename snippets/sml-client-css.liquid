    font-family: 'Heebo-Regular';
    font-size: 14px;
    cursor: pointer;
}

.submitOTPButtonClass {
    display: none;
    width: 100%;
}

#submitEmailOTPButton {
    display: none;
}

.submitEmailOTPButtonClass {
    display: none;
    position: relative;
    margin-top: 20px;
    width: 100%;
}

#resendOTPButton {
    text-decoration: none;
    color: #482F8F;
    font-size: 12px;
    font-weight: 400;
    line-height: 16px;
    padding: 10px;
    flex: 0.5;
    font-family: 'Heebo-Regular';
}

#resendOTPButton span{
    font-family: 'Heebo-Medium' !important;
}

#resendOTPButton.disabled {
