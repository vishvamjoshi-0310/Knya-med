}

#smlGetOTPOnWhatsAppButton {
    display: none;
    width: 100%;
    margin-top: 0px;
    margin-bottom: 15px;
    transition: .4s ease;
}

#smlGetOTPOnWhatsAppButton:hover {
    box-shadow: none;
}

.otp-submit-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 16px;
}

#submitOTPButton {
    display: none;
}

