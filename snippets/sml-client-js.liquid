        const setupOTPBoxes = (container, targetInput) => {
            const boxes = $('.otp-box', container)

            boxes.each(function(index) {
                const box = $(this)

                box.on('input', function(e) {
                    const value = e.target.value

                    // Only allow numbers
                    if (!/^\d$/.test(value) && value !== '') {
                        e.target.value = ''
                        return
                    }

                    // Add filled class
                    if (value) {
                        box.addClass('filled')
                        // Move to next box
                        if (index < boxes.length - 1) {
                            boxes.eq(index + 1).focus()
                        }
                    } else {
                        box.removeClass('filled')
                    }

                    // Update the hidden input with combined value
                    updateHiddenInput(container, targetInput)
                })

                box.on('keydown', function(e) {
                    // Handle backspace
                    if (e.key === 'Backspace' && !e.target.value && index > 0) {
                        boxes.eq(index - 1).focus()
                        boxes.eq(index - 1).val('')
                        boxes.eq(index - 1).removeClass('filled')
                        updateHiddenInput(container, targetInput)
                    }

                    // Handle arrow keys
                    if (e.key === 'ArrowLeft' && index > 0) {
                        boxes.eq(index - 1).focus()
                    }
                    if (e.key === 'ArrowRight' && index < boxes.length - 1) {
                        boxes.eq(index + 1).focus()
                    }
                })

                box.on('paste', function(e) {
                    e.preventDefault()
                    const pastedData = e.originalEvent.clipboardData.getData('text')
                    const digits = pastedData.replace(/\D/g, '').split('')

                    digits.forEach((digit, i) => {
                        if (i < boxes.length) {
                            boxes.eq(i).val(digit).addClass('filled')
                        }
                    })

                    updateHiddenInput(container, targetInput)

                    // Focus on the next empty box or last box
                    const nextEmptyIndex = Math.min(digits.length, boxes.length - 1)
                    boxes.eq(nextEmptyIndex).focus()
                })
            })
        }

