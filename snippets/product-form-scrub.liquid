            <ul class="ColorSwatchList HorizontalList HorizontalList--spacingTight a">
              {%- for value in option.values -%}
                {%- assign downcase_value = value | downcase -%}
                {% assign valuename = value | replace:' ','_' %}
                <li class="HorizontalList__Item">
                  {%- assign color_swatch_name = value | handle | append: '.png' -%}
                  {%- assign color_swatch_image = images[color_swatch_name] -%}
                  <input id="option-{{ section.id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}" class="ColorSwatch__Radio" type="radio" name="option-{{ forloop.parentloop.index0 }}" value="{{ value | escape }}" {% if value == option.selected_value %}checked="checked"{% endif %} data-option-position="{{ option.position }}">
                  <label data-filtertarget="{{ valuename | upcase }}" for="option-{{ section.id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}" class="ColorSwatch ColorSwatch--large {% if downcase_value == 'white' %}ColorSwatch--white{% endif %}   filter-bttn" data-tooltip="{{ value | escape }}" style="background-color: {{ value | replace: ' ', '' | downcase }}; {% if color_swatch_image != blank %}background-image: url({{ color_swatch_image | img_url: '64x64' }}){% endif %}"  onclick="filter(this)">
                    <span class="u-visually-hidden">{{ value }}</span>
                  </label> 
                </li>
              {%- endfor -%}
            </ul>
          {% endcomment %}
          {%- elsif section.settings.selector_mode == 'block' -%}
