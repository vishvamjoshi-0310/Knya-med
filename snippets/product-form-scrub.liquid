                    {% for varient in product.variants %}
                    {% if varient.title == value %}
                    data-price="{{varient.price}}"
                    {% if varient.available %}
                    	data-available="true" 
                    {% else %}
                    	data-available="false"
                    {% endif %}
                    data-qty="{{varient.inventory_quantity}}"
                    data-combo-vids="{{varient.id}}"
                    data-sku="{{varient.sku}}"
                    {% endif %}
                    {% endfor %}>
                  <input id="option-{{ section.id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}" class="SizeSwatch__Radio" type="radio" name="option-{{ forloop.parentloop.index0 }}" value="{{ value | escape }}" data-option-position="{{ option.position }}">
                  {% comment %} {% if value == option.selected_value %}checked="checked"{% endif %} {% endcomment %}
                  <label for="option-{{ section.id }}-{{ forloop.parentloop.index0 }}-{{ forloop.index0 }}" class="SizeSwatch">{{ value }}</label>
                </li>
